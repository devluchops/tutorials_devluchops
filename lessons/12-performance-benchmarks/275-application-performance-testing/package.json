{
  "name": "performance-benchmarking-tools",
  "version": "1.0.0",
  "description": "Complete performance testing and benchmarking toolkit",
  "main": "index.js",
  "scripts": {
    "test:load": "k6 run scripts/load-test-basic.js",
    "test:artillery": "artillery run configs/artillery-config.yml",
    "test:lighthouse": "node scripts/lighthouse-ci.js",
    "monitor:system": "./scripts/system_performance_monitor.sh",
    "benchmark:db": "python scripts/database_benchmark.py",
    "report:generate": "node scripts/generate-report.js",
    "install:tools": "npm run install:k6 && npm run install:artillery",
    "install:k6": "brew install k6 || echo 'Install k6 manually'",
    "install:artillery": "npm install -g artillery"
  },
  "dependencies": {
    "lighthouse": "^10.4.0",
    "chrome-launcher": "^0.15.2",
    "web-vitals": "^3.5.0",
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "k6": "^0.46.0",
    "artillery": "^2.0.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "performance",
    "testing",
    "benchmarking",
    "load-testing",
    "monitoring",
    "optimization",
    "web-vitals",
    "lighthouse",
    "k6",
    "artillery"
  ],
  "author": "Performance Testing Team",
  "license": "MIT"
}
