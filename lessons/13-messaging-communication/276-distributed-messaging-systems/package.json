{
  "name": "distributed-messaging-systems",
  "version": "1.0.0",
  "description": "Complete implementation of distributed messaging systems with Kafka, RabbitMQ, WebSockets, and gRPC",
  "main": "index.js",
  "scripts": {
    "start:kafka": "node kafka/examples/kafka-example.js",
    "start:rabbitmq": "node rabbitmq/examples/rabbitmq-example.js",
    "start:websocket": "node websocket/server.js",
    "start:grpc-server": "node grpc/server.js",
    "start:grpc-client": "node grpc/client.js",
    "test:kafka": "python kafka/test_kafka.py",
    "test:rabbitmq": "python rabbitmq/test_rabbitmq.py",
    "test:websocket": "node websocket/test-client.js",
    "test:all": "npm run test:kafka && npm run test:rabbitmq && npm run test:websocket",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "install:python": "pip install -r requirements.txt"
  },
  "dependencies": {
    "ws": "^8.14.0",
    "express": "^4.18.2",
    "pika": "^1.3.0",
    "grpc": "^1.24.11",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "uuid": "^9.0.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "kafka-node": "^5.0.0",
    "amqplib": "^0.10.3",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "messaging",
    "kafka",
    "rabbitmq",
    "websockets",
    "grpc",
    "distributed-systems",
    "real-time",
    "pub-sub",
    "message-queue",
    "event-streaming"
  ],
  "author": "Messaging Systems Team",
  "license": "MIT"
}
